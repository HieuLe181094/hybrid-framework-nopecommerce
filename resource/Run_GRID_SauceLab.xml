<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Nopcommerce UI Automation" verbose="1" parallel="none" thread-count="2" >

    <listeners>
        <listener class-name="commons.MethodListener"/>
    </listeners>

    <parameter name="environment" value="dev"/>

    <test name="Run on Chrome browser - Windows 11" >
        <parameter name="platformName" value="windows 11"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="browserVersion" value="142"/>
        <classes>
            <class name="com.nopcommerce.users.Level_28_Cloud_SauceLab"/>
        </classes>
    </test>

    <test name="Run on Edge browser - Windows 10" >
        <parameter name="platformName" value="windows 10"/>
        <parameter name="browserName" value="edge"/>
        <parameter name="browserVersion" value="141"/>
        <classes>
            <class name="com.nopcommerce.users.Level_28_Cloud_SauceLab"/>
        </classes>
    </test>

    <test name="Run on Firefox browser - Linux 10" >
        <parameter name="platformName" value="linux"/>
        <parameter name="browserName" value="firefox"/>
        <parameter name="browserVersion" value="143"/>
        <classes>
            <class name="com.nopcommerce.users.Level_28_Cloud_SauceLab"/>
        </classes>
    </test>

    <test name="Run on Safari browser - MAC " >
        <parameter name="platformName" value="macOS 13"/>
        <parameter name="browserName" value="safari"/>
        <parameter name="browserVersion" value="19"/>
        <classes>
            <class name="com.nopcommerce.users.Level_28_Cloud_SauceLab"/>
        </classes>
    </test>




</suite>