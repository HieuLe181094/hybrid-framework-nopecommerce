<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Nopcommerce UI Automation" verbose="1" parallel="none" thread-count="2" >

    <listeners>
        <listener class-name="commons.MethodListener"/>
    </listeners>

    <parameter name="environment" value="dev"/>

    <test name="Run on Chrome browser - Windows 11" >
        <parameter name="platformName" value="Windows"/>
        <parameter name="platformVersion" value="11"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="browserVersion" value="139"/>
        <classes>
            <class name="com.nopcommerce.users.Level_28_Cloud_Bitbar"/>
        </classes>
    </test>

    <test name="Run on Firefox browser - Linux" >
        <parameter name="platformName" value="Linux"/>
        <parameter name="platformVersion" value="18.04"/>
        <parameter name="browserName" value="firefox"/>
        <parameter name="browserVersion" value="142"/>
        <classes>
            <class name="com.nopcommerce.users.Level_28_Cloud_Bitbar"/>
        </classes>
    </test>

    <test name="Run on Edge browser - Windows 10" >
        <parameter name="platformName" value="Windows"/>
        <parameter name="platformVersion" value="10"/>
        <parameter name="browserName" value="MicrosoftEdge"/>
        <parameter name="browserVersion" value="139"/>
        <classes>
            <class name="com.nopcommerce.users.Level_28_Cloud_Bitbar"/>
        </classes>
    </test>

    <test name="Run on SAFARI - MAC" >
        <parameter name="platformName" value="macOS"/>
        <parameter name="platformVersion" value="12"/>
        <parameter name="browserName" value="safari"/>
        <parameter name="browserVersion" value="17"/>
        <classes>
            <class name="com.nopcommerce.users.Level_28_Cloud_Bitbar"/>
        </classes>
    </test>


</suite>